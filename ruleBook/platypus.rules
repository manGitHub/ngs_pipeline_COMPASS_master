# coding: utf-8
rule PLATYPUS:
	input:
		bam="{subject}/{TIME}/{sample}/{sample}.bwa.final.bam",
		ref=config["reference"],
		dbsnp=config["dbsnp"],
		interval=lambda wildcards: config['target_intervals'][config['sample_captures'][wildcards.sample]].replace("target","targetbp"),
	output:
		vcf="{subject}/{TIME}/{sample}/calls/{sample}.Platypus.raw.vcf"
	version: config["platypus"]
#	log: "log/platypus.{subject}"
	params:
		rulename = "PLATYPUS",
		batch    = config[config['host']]["job_platypus"],
        	snpEff  = config["snpEff"]
	shell: """
	#######################
	module load platypus/{version}

	JAVA_HOME=/data/Compass/dev/valdezkm/software/Java/jdk1.7.0_25
	PATH=/data/Compass/dev/valdezkm/software/Java/jdk1.7.0_25/bin:$PATH
	LD_LIBRARY_PATH=/data/Compass/dev/valdezkm/software/Java/jdk1.7.0_25/lib:$LD_LIBRARY_PATH

	PATH=/data/Compass/dev/valdezkm/software/snpEff/4.1c:$PATH
	PATH=/data/Compass/dev/valdezkm/software/snpEff/4.1c/scripts:$PATH
	SNPEFFHOME=/data/Compass/dev/valdezkm/software/snpEff/4.1c
	SNPEFF_JAR=/data/Compass/dev/valdezkm/software/snpEff/4.1c/snpEff.jar
	SNPSIFT_JAR=/data/Compass/dev/valdezkm/software/snpEff/4.1c/SnpSift.jar
	SNPEFF_JARPATH=/data/Compass/dev/valdezkm/software/snpEff/4.1c
	SNPEFF_HOME=/data/Compass/dev/valdezkm/software/snpEff/4.1c
	SNPEFF_EXAMPLES=/data/Compass/dev/valdezkm/software/snpEff/4.1c/examples

	platypus callVariants --nCPU=${{THREADS}} --bufferSize=1000000 --maxReads=100000000 --bamFiles={input.bam} --regions={input.interval} --output=${{LOCAL}}/{wildcards.sample}.Platypus.raw.vcf --refFile={input.ref}  
	java -Xmx${{MEM}}g -Djava.io.tmpdir=${{LOCAL}} -jar $SNPEFF_JARPATH/SnpSift.jar filter "((FILTER = 'PASS'))" ${{LOCAL}}/{wildcards.sample}.Platypus.raw.vcf > {output.vcf}
    	sed -i 's/.bwa.final//g' {output.vcf}
	#######################
	"""
